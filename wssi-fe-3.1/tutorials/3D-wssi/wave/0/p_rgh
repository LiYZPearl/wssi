FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    seabed
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            zeroGradient;
    }
    inlet
    {
        type            zeroGradient;
    }
    slubSides
    {
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
    }
    slubTop
    {
        type            zeroGradient;
    }
    pile
    {
        type            zeroGradient;
    }
    atmosphere
    {
        type            totalPressure;
        rho             none;
        psi             none;
        gamma           1;
        p0              uniform 0;
        value           uniform 0;
    }
}


